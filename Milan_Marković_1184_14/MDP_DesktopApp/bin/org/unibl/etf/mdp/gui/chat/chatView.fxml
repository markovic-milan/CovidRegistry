<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.unibl.etf.mdp.gui.chat.ChatController">
	<VBox fx:id="vBox" prefWidth="350.0" spacing="5.0">
		<children>
			<TextArea fx:id="chatTA" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="480.0" />
			<TextField fx:id="messageTF" prefHeight="35.0" promptText="Type a message..." />
		</children>
	</VBox>
</AnchorPane>
